
<%- include('layout') %>

<h2>Edit Portfolio</h2>
<form action="/edit/<%= portfolio._id %>" method="POST">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="<%= portfolio.title %>" required>
  
  <label for="description">Description:</label>
  <textarea name="description" id="description" required><%= portfolio.description %></textarea>
  
  <label for="imageUrl">Image URL:</label>
  <input type="text" name="imageUrl" id="imageUrl" value="<%= portfolio.imageUrl %>" required>
  
  <button type="submit">Update Portfolio</button>
</form>
